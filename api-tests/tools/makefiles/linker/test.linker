ENTRY(TEST_START)

TEST_START = 0x2004F000;

MEMORY
{
    TEST_INFO  (R)  : ORIGIN = TEST_START, LENGTH = 0x100
    TEST_TEXT  (RX) : ORIGIN = TEST_START +0x100, LENGTH = 0x1A00
    TEST_DATA  (RW) : ORIGIN = TEST_START +0x1B00, LENGTH = 0x1800
}

SECTIONS
{
    .acs_test_info :
    {
        KEEP(*(.acs_test_info))
    } > TEST_INFO

    .text :
    {
        *(.text)
        *(.text*)
        *(.rodata)
        *(.rodata*)
    } > TEST_TEXT

    .data :
    {
        *(.data)
        *(.data*)
    } > TEST_DATA

    .bss :
    {
        *(.bss)
        *(.bss.*)
        *(COMMON)
    } > TEST_DATA
}
